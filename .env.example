# Base Chain Configuration
BASE_RPC_URL=https://sepolia.base.org
PRIVATE_KEY=your_private_key_here

# IPFS Configuration
IPFS_API_URL=http://localhost:5001/api/v0  # Local IPFS node
# Or use a remote IPFS node:
# IPFS_API_URL=https://ipfs.infura.io:5001/api/v0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# LLM Configuration
LLM_MODEL_NAME=mixtral-8x7b-instruct
LLM_MAX_LENGTH=100
LLM_TEMPERATURE=0.3
LLM_TOP_P=0.7
LLM_NUM_BEAMS=1
LLM_DO_SAMPLE=True
LLM_EARLY_STOPPING=True
LLM_USE_CACHE=True

# Model Registry Configuration
MODEL_REGISTRY_DEVICE=auto  # auto, cuda, mps, or cpu
MODEL_REGISTRY_MAX_MEMORY_CPU=8GB  # Maximum memory for CPU
MODEL_REGISTRY_MAX_MEMORY_GPU=4GB  # Maximum memory for GPU/MPS

# Contract Configuration
CONTRACT_ADDRESS=your_contract_address_here
PAYMENT_CONTRACT_ADDRESS=your_payment_contract_address_here
REACT_APP_PAYMENT_CONTRACT_ADDRESS=your_payment_contract_address_here

# API Keys
TOGETHER_API_KEY=your_together_api_key_here
REPLICATE_API_TOKEN=your_replicate_api_token_here
HUGGINGFACE_TOKEN=your_huggingface_token_here

# IPFS Project Configuration (if using Infura)
IPFS_PROJECT_ID=your_ipfs_project_id_here
IPFS_PROJECT_SECRET=your_ipfs_project_secret_here 