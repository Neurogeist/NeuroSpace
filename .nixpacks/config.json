{
  "providers": ["python"],
  "phases": {
    "setup": {
      "nixpkgs": ["python310", "pip"]
    },
    "install": {
      "cmds": [
        "pip install --no-cache-dir -r requirements.txt"
      ]
    },
    "start": {
      "cmd": "uvicorn api.app.main:app --host 0.0.0.0 --port 8000"
    }
  }
}
