{
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
        "providers": ["python"],
        "phases": {
          "install": {
            "cmds": [
              "pip install --no-cache-dir -r requirements.txt"
            ]
          }
        }
      }
    },
    "deploy": {
      "startCommand": "uvicorn api.app.main:app --host 0.0.0.0 --port 8000"
    }
}
  